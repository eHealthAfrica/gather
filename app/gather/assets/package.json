{
  "name": "gather-assets",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "repository": "https://github.com/eHealthAfrica/gather",
  "description": "Effortless data collection and curation",
  "author": {
    "name": "eHealth Africa",
    "email": "info@ehealthafrica.org",
    "url": "https://ehealthafrica.org"
  },
  "scripts": {
    "test-lint-js": "standard './**/*.js*'",
    "test-lint-scss": "stylelint './css/**/*.{css,scss,sass}'",
    "test-lint": "npm run test-lint-js && npm run test-lint-scss",
    "test-js": "jest --expand",
    "test-js-verbose": "TERM=dumb && jest --expand --colors --maxWorkers=1",
    "test": "npm run test-lint && npm run test-js",
    "build": "webpack --config ./conf/webpack.prod.js",
    "start": "node ./conf/webpack.server.js"
  },
  "dependencies": {
    "@formatjs/intl-relativetimeformat": "~9.3.0",
    "@formatjs/intl-utils": "~3.8.0",
    "@popperjs/core": "~2.10.0",
    "abortcontroller-polyfill": "~1.7.0",
    "bootstrap": "~5.1.0",
    "moment": "~2.29.0",
    "popper.js": "~1.16.0",
    "react": "~16.14.0",
    "react-dom": "~16.14.0",
    "react-intl": "~5.20.0",
    "whatwg-fetch": "~3.6.0"
  },
  "devDependencies": {
    "@babel/core": "~7.15.0",
    "@babel/preset-env": "~7.15.0",
    "@babel/preset-react": "~7.14.0",
    "@hot-loader/react-dom": "~16.14.0",
    "abort-controller": "~3.0.0",
    "babel-loader": "~8.2.0",
    "css-loader": "~5.2.0",
    "enzyme": "~3.11.0",
    "enzyme-adapter-react-16": "~1.15.0",
    "eslint": "~7.32.0",
    "express": "~4.17.0",
    "jest": "~27.2.0",
    "mini-css-extract-plugin": "~1.6.0",
    "nock": "~13.1.0",
    "node-fetch": "~2.6.0",
    "node-sass": "~5.0.0",
    "react-hot-loader": "~4.13.0",
    "sass-loader": "~10.1.0",
    "standard": "~16.0.0",
    "style-loader": "~2.0.0",
    "stylelint": "~13.13.0",
    "stylelint-config-standard": "~22.0.0",
    "webpack": "~4.44.0",
    "webpack-bundle-tracker": "~1.4.0",
    "webpack-cli": "~3.3.0",
    "webpack-dev-middleware": "~3.7.0",
    "webpack-hot-middleware": "~2.25.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "standard": {
    "ignore": [
      "/bundles/",
      "package.json",
      "package-lock.json"
    ],
    "verbose": true
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": null,
      "no-descending-specificity": null
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/tests/.coverage",
    "rootDir": ".",
    "setupFiles": [
      "<rootDir>/tests/jest.setup.jsx"
    ],
    "testEnvironment": "<rootDir>/tests/jest-tests-environment",
    "testURL": "http://localhost/",
    "verbose": true
  }
}
