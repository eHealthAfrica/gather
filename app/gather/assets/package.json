{
  "name": "gather",
  "version": "0.0.0",
  "license": "Apache-2.0",

  "author": {
    "name": "eHealth Africa",
    "email": "info@ehealthafrica.org",
    "url": "https://ehealthafrica.org"
  },

  "scripts": {
    "test-lint-js": "standard './apps/**/*.jsx'",
    "test-lint-scss": "sass-lint --config ./conf/sass-lint.yml --verbose",
    "test-lint": "npm run test-lint-js && npm run test-lint-scss",
    "test-js": "jest --expand",
    "test-js-verbose": "TERM=dumb && jest --expand --colors --maxWorkers=1",
    "test": "npm run test-lint && npm run test-js",
    "webpack": "webpack --config ./conf/webpack.prod.js",
    "webpack-server": "node ./conf/webpack.server.js"
  },

  "dependencies": {
    "bootstrap": "~4.1.0",
    "html5shiv": "~3.7.0",
    "jquery": "~3.3.0",
    "moment": "~2.22.0",
    "popper.js": "~1.14.0",
    "react": "~16.4.0",
    "react-dom": "~16.4.0",
    "react-filtered-multiselect": "~0.5.0",
    "react-intl": "~2.4.0",
    "whatwg-fetch": "~2.0.0"
  },

  "devDependencies": {
    "babel-core": "~6.26.0",
    "babel-jest": "~23.4.0",
    "babel-loader": "~7.1.0",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-preset-env": "~1.7.0",
    "babel-preset-react": "~6.24.0",
    "css-loader": "~1.0.0",
    "enzyme": "~3.3.0",
    "enzyme-adapter-react-16": "~1.1.0",
    "enzyme-react-intl": "~2.0.0",
    "jest": "~23.4.0",
    "mini-css-extract-plugin": "~0.4.0",
    "nock": "~9.4.0",
    "node-fetch": "~2.1.0",
    "node-sass": "~4.9.0",
    "react-hot-loader": "~4.3.0",
    "sass-lint": "~1.12.0",
    "sass-loader": "~7.0.0",
    "standard": "~11.0.0",
    "style-loader": "~0.21.0",
    "webpack": "~4.16.0",
    "webpack-bundle-tracker": "~0.3.0",
    "webpack-cli": "~3.0.0",
    "webpack-dev-server": "~3.1.0"
  },

  "babel": {
    "presets": ["env", "react"],
    "plugins": [
      "babel-plugin-transform-object-rest-spread",
      "react-hot-loader/babel"
    ]
  },
  "standard": {
    "verbose": true
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/tests/.coverage",
    "rootDir": ".",
    "setupFiles": ["<rootDir>/tests/jest.setup.jsx"],
    "testEnvironment": "<rootDir>/tests/jest-tests-environment",
    "verbose": true
  }
}
