{
  "name": "gather-assets",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "repository": "https://github.com/eHealthAfrica/gather",
  "description": "Effortless data collection and curation",

  "author": {
    "name": "eHealth Africa",
    "email": "info@ehealthafrica.org",
    "url": "https://ehealthafrica.org"
  },

  "scripts": {
    "test-lint-js": "standard './**/*.js*'",
    "test-lint-scss": "sass-lint --config ./conf/sass-lint.yml --verbose",
    "test-lint": "npm run test-lint-js && npm run test-lint-scss",
    "test-js": "jest --expand",
    "test-js-verbose": "TERM=dumb && jest --expand --colors --maxWorkers=1",
    "test": "npm run test-lint && npm run test-js",
    "build": "webpack --config ./conf/webpack.prod.js",
    "start": "node ./conf/webpack.server.js"
  },

  "dependencies": {
    "abortcontroller-polyfill": "~1.3.0",
    "bootstrap": "~4.3.0",
    "jquery": "~3.4.0",
    "moment": "~2.24.0",
    "popper.js": "~1.15.0",
    "react": "~16.8.0",
    "react-dom": "~16.8.0",
    "react-filtered-multiselect": "~0.5.0",
    "react-intl": "~2.9.0",
    "whatwg-fetch": "~3.0.0"
  },

  "devDependencies": {
    "@babel/core": "~7.5.0",
    "@babel/preset-env": "~7.5.0",
    "@babel/preset-react": "~7.0.0",
    "@hot-loader/react-dom": "~16.8.0",
    "abort-controller": "~3.0.0",
    "babel-loader": "~8.0.0",
    "css-loader": "~3.1.0",
    "enzyme": "~3.10.0",
    "enzyme-adapter-react-16": "~1.14.0",
    "enzyme-react-intl": "~2.0.0",
    "express": "~4.17.0",
    "jest": "~24.8.0",
    "mini-css-extract-plugin": "~0.8.0",
    "nock": "~10.0.0",
    "node-fetch": "~2.6.0",
    "node-sass": "~4.12.0",
    "react-hot-loader": "~4.12.0",
    "sass-lint": "~1.13.0",
    "sass-loader": "~7.1.0",
    "standard": "~13.1.0",
    "style-loader": "~0.23.0",
    "webpack": "~4.38.0",
    "webpack-bundle-tracker": "~0.4.2-beta",
    "webpack-cli": "~3.3.0",
    "webpack-dev-middleware": "~3.7.0",
    "webpack-hot-middleware": "~2.25.0"
  },

  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": ["react-hot-loader/babel"],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env", {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "standard": {
    "ignore": [
      "/bundles/",
      "package.json",
      "package-lock.json"
    ],
    "verbose": true
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/tests/.coverage",
    "rootDir": ".",
    "setupFiles": ["<rootDir>/tests/jest.setup.jsx"],
    "testEnvironment": "<rootDir>/tests/jest-tests-environment",
    "testURL": "http://localhost/",
    "verbose": true
  }
}
